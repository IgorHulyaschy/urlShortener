FROM node:14

WORKDIR /app

COPY package*.json ./

RUN npm install

COPY . /app

ARG SERVER_PORT
ARG SERVER_BASEURL
ARG DB_NAME
ARG DB_HOST
ARG DB_PASS
ARG DB_USER

ENV SERVER_PORT=$SERVER_PORT
ENV SERVER_BASEURL=$SERVER_BASEURL
ENV DB_NAME=$DB_NAME
ENV DB_HOST=$DB_HOST
ENV DB_PASS=$DB_PASS
ENV DB_USER=$DB_USER

EXPOSE $SERVER_PORT

CMD ["npm", "start"]